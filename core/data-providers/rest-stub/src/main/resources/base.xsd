<xsd:schema xmlns="http://www.ambergarden.com/jewelry/schema/beans/base"
            targetNamespace="http://www.ambergarden.com/jewelry/schema/beans/base"
            xmlns:xsd="http://www.w3.org/2001/XMLSchema">

   <xsd:complexType name="abstract-entity">
      <xsd:sequence>
         <xsd:element name="id" type="xsd:long"/>
      </xsd:sequence>
   </xsd:complexType>

   <xsd:complexType name="named-entity">
      <xsd:complexContent>
         <xsd:extension base="abstract-entity">
            <xsd:sequence>
               <xsd:element name="name" type="xsd:string"/>
            </xsd:sequence>
         </xsd:extension>
      </xsd:complexContent>
   </xsd:complexType>

   <xsd:complexType name="descriptive-entity">
      <xsd:complexContent>
         <xsd:extension base="named-entity">
            <xsd:sequence>
               <xsd:element name="description" type="xsd:string"/>
            </xsd:sequence>
         </xsd:extension>
      </xsd:complexContent>
   </xsd:complexType>
</xsd:schema>